{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "assets/"],
      "outputs": ["build/**", "media/build/**"],
      "dependsOn": ["build-parser", "^dev", "install-r-pkg"],
      "outputMode": "new-only"
    },
    "build-parser": {
      "inputs": ["src/**/*"],
      "outputs": ["dist/*"],
      "outputMode": "new-only"
    },
    "prod": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "assets/"],
      "outputs": ["build/**", "media/build/**", "vscode-extension-*.vsix"],
      "outputMode": "new-only",
      "dependsOn": ["build-parser", "build"]
    },
    "build": {
      "outputs": ["dist/**", "build/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "assets/"]
    },
    "type-check": {
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "outputMode": "new-only"
    },
    "test": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "outputs": [],
      "outputMode": "new-only"
    },
    "format": {
      "inputs": ["../../R/*.R"]
    },
    "playwright": {
      "cache": false,
      "outputs": [""]
    },
    "build-storybook": {
      "cache": false,
      "outputs": ["storybook-static/"]
    },
    "update-visual-snapshots": { "cache": false },
    "watch": { "cache": false },
    "install-r-pkg": {
      "inputs": ["../../R/*.R"]
    }
  }
}
