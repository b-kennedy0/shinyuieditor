{
  "name": "shiny-ui-editor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@popperjs/core": "^2.11.2",
    "@reduxjs/toolkit": "^1.8.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/react-dom": "^16.9.0",
    "bootstrap": "^5.1.3",
    "immer": "^9.0.12",
    "just-clone": "^5.0.0",
    "just-debounce-it": "^3.0.0",
    "just-omit": "^1.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^3.0.0",
    "react-joyride": "^2.4.0",
    "react-markdown": "^8.0.3",
    "react-popper": "^2.2.5",
    "react-redux": "^7.2.6",
    "react-sortablejs": "^6.1.1",
    "sortablejs": "^1.15.0",
    "typescript": "^4.7.4",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@playwright/test": "^1.25.0",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/node-logger": "^6.4.13",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@svgr/cli": "^6.2.1",
    "@testing-library/react": "^10.2.1",
    "@testing-library/user-event": "^12.0.2",
    "@types/jest": "^25.0.0",
    "@types/react": "^16.9.0",
    "@types/sortablejs": "^1.10.7",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-react": "^2.0.0",
    "babel-loader": "^8.2.5",
    "eslint": "^8.21.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.25.4",
    "jsdom": "^20.0.0",
    "prettier": "2.5.1",
    "vite": "^3.0.4",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.21.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "build-netlify": "VITE_SHOW_FAKE_PREVIEW=true PUBLIC_URL=/ yarn build",
    "build-website-demo": "VITE_SHOW_FAKE_PREVIEW=false vite build --outDir ../../vignettes/demo-app",
    "test": "vitest",
    "playwright": "playwright test",
    "storybook": "start-storybook -p 6006",
    "lint": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "build-icons": "svgr --out-dir src/components/Icons/generated --icon --typescript -- src/assets/svg-icons",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.tsx",
          "**/*.ts"
        ],
        "rules": {
          "no-console": "warn",
          "@typescript-eslint/consistent-type-imports": "error",
          "import/order": [
            "error",
            {
              "groups": [
                "builtin",
                "external",
                "parent",
                "index",
                "internal"
              ],
              "pathGroups": [
                {
                  "pattern": "react",
                  "group": "external",
                  "position": "before"
                }
              ],
              "pathGroupsExcludedImportTypes": [
                "react"
              ],
              "newlines-between": "always",
              "alphabetize": {
                "order": "asc",
                "caseInsensitive": true
              }
            }
          ]
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "no-console": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8888",
  "packageManager": "yarn@3.2.3"
}
